{
  "name": "notify-me-nest",
  "version": "4.0.9",
  "description": "SaaS backend framework with users, payments, APIs, and more",
  "author": "Eslam Genedy",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "npx env-cmd -f ./config/.env.development nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "npx env-cmd -f ./config/.env.development nest start",
    "start:dev": "npx env-cmd -f ./config/.env.development nest start --watch",
    "start:debug": "npx env-cmd -f ./config/.env.development nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "dev:migrate:once": "npx env-cmd -f ./config/.env.development prisma migrate dev",
    "dev:generate": "npx env-cmd -f ./config/.env.development prisma generate",
    "dev:deploy": "npx env-cmd -f ./config/.env.development prisma migrate deploy",
    "db:push": "npx env-cmd -f ./config/.env.development prisma db push",
    "db:pull": "npx env-cmd -f ./config/.env.development prisma db pull",
    "db:resolve": "npx env-cmd -f ./config/.env.development prisma migrate resolve --rolled-back"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^9.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-express": "^9.4.3",
    "@nestjs/swagger": "^7.3.1",
    "@prisma/client": "^5.12.1",
    "@types/jsonwebtoken": "^9.0.6",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "env-cmd": "^10.1.0",
    "fs": "^0.0.1-security",
    "helmet": "^7.1.0",
    "join": "^3.0.0",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.5.0",
    "notify-me-nest": "file:",
    "path": "^0.12.7",
    "reflect-metadata": "^0.1.13",
    "response-time": "^2.3.2",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.13",
    "@types/jest": "29.5.0",
    "@types/luxon": "^3.4.2",
    "@types/node": "18.15.11",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "29.5.0",
    "prettier": "^2.3.2",
    "prisma": "^5.12.1",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.5",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
